{
  "name": "Burn Backend - Dev Container",
  "dockerComposeFile": "../docker-compose.dev.yml",
  "service": "burn_backend",
  "runArgs": ["-e", "SERVICE_NAME=burn_backend"],
  "mounts": ["source=${localEnv:HOME}/.aws,target=/root/.aws,type=bind"],
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.black-formatter",
        "esbenp.prettier-vscode",
        "googlecloudtools.cloudcode"
      ]
    }
  },
  "postCreateCommand": "docker compose exec titiler bash -c 'conda run -n titiler uvicorn src.titiler.app:app --host=0.0.0.0 --port=8080'"
}
